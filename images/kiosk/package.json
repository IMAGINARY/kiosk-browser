{
  "name": "kiosk-browser",
  "productName": "kiosk-browser",
  "version": "0.9.8",
  "description": "Hardend Kiosk Web Browser",
  "homepage": "https://github.com/IMAGINARY/kiosk-browser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMAGINARY/kiosk-browser.git"
  },
  "bugs": {
    "url": "https://github.com/IMAGINARY/kiosk-browser/issues",
    "email": "info@imaginary.org"
  },
  "main": "main.js",
  "keywords": [
    "kiosk",
    "web",
    "browser",
    "electron"
  ],
  "author": "IMAGINARY gGmbH <info@imaginary.org>",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-builder": "^19.56.0",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "electron-settings": "^3.1.4",
    "network": "^0.4.0",
    "os": "^0.1.1",
    "yargs": "^11.0.0"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "pack": "electron-rebuild && CSC_IDENTITY_AUTO_DISCOVERY=false build --linux --x64 --dir",
    "dist": "electron-rebuild && CSC_IDENTITY_AUTO_DISCOVERY=false build --linux --x64"
  },
  "build": {
    "appId": "org.imaginary.kiosk",
    "npmRebuild": false,
    "linux": {
      "icon": "build/256x256.png",
      "executableName": "kiosk-browser",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Network",
      "packageCategory": "web"
    },
    "deb": {},
    "rpm": {},
    "appImage": {},
    "win": {
      "icon": "build/icon.ico"
    },
    "files": [
      "main.js",
      "defaults.json",
      "index.html",
      "testapp.html",
      "prototype.min.js",
      "arrow.png",
      "Center.mp3",
      "Left.mp3",
      "Right.mp3",
      "!yarn-error.log",
      "!.gitignore",
      "!yarn.lock",
      "!hooks",
      "!Makefile",
      "!*.sh",
      "!*~",
      "!dist",
      "!*Dockerfile"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": ".",
        "filter": "**/256x256.png"
      }
    ]
  },
  "yargs": {
    "short-option-groups": true,
    "camel-case-expansion": false,
    "dot-notation": true,
    "parse-numbers": true
  }
}
