{
  "name": "kiosk-browser",
  "productName": "kiosk-browser",
  "version": "0.18.1",
  "description": "Hardened Kiosk Web Browser",
  "homepage": "https://github.com/IMAGINARY/kiosk-browser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMAGINARY/kiosk-browser.git"
  },
  "bugs": {
    "url": "https://github.com/IMAGINARY/kiosk-browser/issues",
    "email": "info@imaginary.org"
  },
  "main": "src/js/main/main.js",
  "keywords": [
    "kiosk",
    "web",
    "browser",
    "electron"
  ],
  "author": "IMAGINARY gGmbH <info@imaginary.org>",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "~31.7.7",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-import": "^2.29.1",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.2"
  },
  "dependencies": {
    "@electron/remote": "2.1.2",
    "color": "4.2.3",
    "finalhandler": "1.2.0",
    "fs-extra": "11.2.0",
    "json5": "2.2.3",
    "serve-static": "1.15.0",
    "winston": "3.13.0",
    "yargs": "17.4.1"
  },
  "scripts": {
    "check-updates": "npm-check-updates",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --x64 --dir",
    "dist": "electron-builder --x64",
    "prettier": "prettier --write ."
  },
  "build": {
    "appId": "org.imaginary.kiosk",
    "npmRebuild": false,
    "linux": {
      "executableName": "kiosk-browser",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Network",
      "packageCategory": "web"
    },
    "deb": {},
    "rpm": {},
    "appImage": {},
    "win": {
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "files": [
      "package.json",
      "src/**/*",
      "build/fallbackicon.png",
      "!**/.DS_Store"
    ]
  }
}
