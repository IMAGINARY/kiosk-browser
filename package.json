{
  "name": "kiosk-browser",
  "productName": "kiosk-browser",
  "version": "0.11.0-alpha.2",
  "description": "Hardend Kiosk Web Browser",
  "homepage": "https://github.com/IMAGINARY/kiosk-browser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMAGINARY/kiosk-browser.git"
  },
  "bugs": {
    "url": "https://github.com/IMAGINARY/kiosk-browser/issues",
    "email": "info@imaginary.org"
  },
  "main": "src/js/main/main.js",
  "keywords": [
    "kiosk",
    "web",
    "browser",
    "electron"
  ],
  "author": "IMAGINARY gGmbH <info@imaginary.org>",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "5.0.0-beta.5",
    "electron-builder": "^20.38.2"
  },
  "dependencies": {
    "electron-settings": "^3.1.4",
    "finalhandler": "^1.1.1",
    "fs-extra": "^7.0.1",
    "hjson": "^3.1.2",
    "http": "^0.0.0",
    "network": "^0.4.0",
    "os": "^0.1.1",
    "portfinder": "^1.0.19",
    "serve-static": "^1.13.2",
    "winston": "^3.2.1",
    "yargs": "^12.0.5"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "CSC_IDENTITY_AUTO_DISCOVERY=false build --x64 --dir",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false build --x64"
  },
  "build": {
    "appId": "org.imaginary.kiosk",
    "npmRebuild": false,
    "linux": {
      "executableName": "kiosk-browser",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Network",
      "packageCategory": "web"
    },
    "deb": {},
    "rpm": {},
    "appImage": {},
    "win": {
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "files": [
      "package.json",
      "src/**/*",
      "build/fallbackicon.png",
      "!**/.DS_Store"
    ]
  },
  "yargs": {
    "short-option-groups": true,
    "camel-case-expansion": false,
    "dot-notation": true,
    "parse-numbers": true
  }
}
